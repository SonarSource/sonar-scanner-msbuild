<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonarsource.parent</groupId>
    <artifactId>parent</artifactId>
    <version>36</version>
    <relativePath />
  </parent>

  <groupId>org.sonarsource.scanner.msbuild</groupId>
  <artifactId>scanner-msbuild-its</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>Scanner for MSBuild :: Integration Tests</name>

  <inceptionYear>2016</inceptionYear>

  <properties>
    <vbnetPlugin.version>2.5.0.243</vbnetPlugin.version>
    <csharpPlugin.version>5.1</csharpPlugin.version>
  </properties>
  
  <dependencies>
    <dependency>
      <groupId>org.sonarsource.orchestrator</groupId>
      <artifactId>sonar-orchestrator</artifactId>
      <version>3.13-build724</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.7.2</version>
    </dependency>

    <!-- Force Maven to download these artifacts -->
    <dependency>
      <groupId>org.sonarsource.dotnet</groupId>
      <artifactId>sonar-csharp-plugin</artifactId>
      <version>${csharpPlugin.version}</version>
    </dependency>
    <dependency>
      <groupId>com.sonarsource.vbnet</groupId>
      <artifactId>sonar-vbnet-plugin</artifactId>
      <version>${vbnetPlugin.version}</version>
    </dependency>

    <dependency>
      <groupId>org.assertj</groupId>
      <artifactId>assertj-core</artifactId>
      <version>3.4.1</version>
    </dependency>
  </dependencies>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <includes>
            <include>**/TestSuite.java</include>
            <include>**/VBNetTest.java</include>
          </includes>
          <systemProperties>
            <vbnetPlugin.version>${vbnetPlugin.version}</vbnetPlugin.version>
          </systemProperties>
        </configuration>
      </plugin>
    </plugins>
  </build>
  
  <profiles>
    <profile>
      <id>download-scanner-artifacts</id>
      <activation>
        <property>
          <name>scannerForMSBuild.version</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <version>2.10</version>
            <executions>
              <execution>
                <id>download-scanner</id>
                <phase>initialize</phase>
                <goals>
                  <goal>get</goal>
                </goals>
                <configuration>
                  <artifact>org.sonarsource.scanner.msbuild:sonar-scanner-msbuild:${scannerForMSBuild.version}:zip</artifact>
                </configuration>
              </execution>
              <execution>
                <id>download-scanner-impl</id>
                <phase>initialize</phase>
                <goals>
                  <goal>get</goal>
                </goals>
                <configuration>
                  <artifact>org.sonarsource.scanner.msbuild:sonar-scanner-msbuild:${scannerForMSBuild.version}:zip:impl</artifact>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
        <profile>
      <id>download-scanner-payload-artifacts</id>
      <activation>
        <property>
          <name>scannerForMSBuildPayload.version</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <version>2.10</version>
            <executions>
              <execution>
                <id>download-scanner-payload</id>
                <phase>initialize</phase>
                <goals>
                  <goal>get</goal>
                </goals>
                <configuration>
                  <artifact>org.sonarsource.scanner.msbuild:sonar-scanner-msbuild:${scannerForMSBuildPayload.version}:zip</artifact>
                </configuration>
              </execution>
              <execution>
                <id>download-scanner-payload-impl</id>
                <phase>initialize</phase>
                <goals>
                  <goal>get</goal>
                </goals>
                <configuration>
                  <artifact>org.sonarsource.scanner.msbuild:sonar-scanner-msbuild:${scannerForMSBuildPayload.version}:zip:impl</artifact>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
