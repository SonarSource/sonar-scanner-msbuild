{
    "manifestVersion": 1,
    "id": "set-by-extension-manifest.environment.json",
    "name": "set-by-extension-manifest.environment.json",
    "version": "set-by-extension-manifest.environment.json",
    "publisher": "set-by-extension-manifest.environment.json",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Use the SonarQube build tasks in your continuous integration builds to track bugs, code smells and vulnerabilities in 20 different languages such as C#, VB.Net, Java, C, C++, JavaScript...",
    "public": false,
    "categories": [
        "Build and release"
    ],
    "icons": {
        "default": "extension-icon.png"
    },
    "tags": [
        "build",
        "ci",
        "continuous integration"
    ],
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "license-terms.md"
        }
    },
    "screenshots": [
        {
            "path": "img/tasks.png"
        }
    ],
    "links": {
        "home": {
            "uri": "http://www.sonarqube.org/"
        },
        "getstarted": {
            "uri": "http://redirect.sonarsource.com/doc/install-configure-scanner-tfs-ts.html"
        },
        "support": {
            "uri": "http://www.sonarqube.org/get-support/"
        },
        "repository": {
            "uri": "https://github.com/SonarSource-VisualStudio/sonar-scanner-msbuild/tree/master/VSTS"
        }
    },
    "files": [
        {
            "path": "Tasks"
        },
        {
            "path": "img",
            "addressable": true
        }
    ],
    "scopes": [
        "vso.build",
        "vso.code_write",
        "vso.test"
    ],
    "contributions": [
        {
            "id": "15B84CA1-B62F-4A2A-A403-89B77A063157",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "Tasks/ScannerMsBuildBegin"
            }
        },
        {
            "id": "6D01813A-9589-4B15-8491-8164AEB38055",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "Tasks/ScannerMsBuildEnd"
            }
        },
        {
            "id": "9F57024B-31F9-4E58-9E39-A47CCC098F03",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name":  "Tasks/ScannerCli"
            }
        },
        {
            "id": "EDC775DD-1A82-4ADD-A073-7B5813E87202",
            "description": "Service Endpoint type for SonarQube Connections",
            "type": "ms.vss-endpoint.service-endpoint-type",
            "targets": [
                "ms.vss-endpoint.endpoint-types"
            ],
            "properties": {
                "name": "sonarqube",
                "displayName": "SonarQube",
                "url": {
                    "displayName": "Server Url",
                    "helpText": "Url for the SonarQube Server to connect to."
                },
                "authenticationSchemes": [
                    {
                        "type": "ms.vss-endpoint.endpoint-auth-scheme-basic",
                        "inputDescriptors": [
                            {
                                "id": "username",
                                "name": "Token",
                                "description": "Authentication Token generated by SonarQube.",
                                "inputMode": "textbox",
                                "validation": {
                                    "isRequired": true,
                                    "dataType": "string"
                                }
                            },
                            {
                                "id": "password",
                                "name": "Password",
                                "description": "Password",
                                "inputMode": "passwordbox",
                                "isConfidential": true,
                                "validation": {
                                    "isRequired": false,
                                    "dataType": "string"
                                },
                                "values": {
                                    "inputId": "passwordInput",
                                    "defaultValue": "",
                                    "isDisabled": true
                                }
                            }
                        ]
                    }
                ],
                "helpMarkDown": ""
            }
        }
    ]
}
