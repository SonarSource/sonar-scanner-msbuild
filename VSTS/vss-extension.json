{
    "manifestVersion": 1,
    "id": "sonarqube-scanner-msbuild",
    "name": "SonarQube Scanner for MSBuild",
    "version": "0.5.5",
    "publisher": "sonarsource",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "The SonarQube Scanner for MSBuild is the recommended way to launch a SonarQube analysis on MSBuild projects and solutions. This extension includes two tasks",
    "categories": [
        "Build and release"
    ],
    "icons": {
        "default": "extension-icon.png"        
    },
    "tags": [
        "build",
        "ci",
        "continuous integration"
    ],
	"content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "license-terms.md"
        }
    },
    "screenshots": [],
	"links": {
        "home": {
            "uri": "http://www.sonarqube.org/"
        }
    },
    "branding": {
        "color": "rgb(67, 157, 210)",
        "theme": "dark"
    },
    "files": [
        {
            "path": "Tasks"
        }
    ],
    "contributions": [
        {
            "id": "EAC0BC9E-D29E-48F8-920F-4833DA6B513A",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "Tasks/SonarQubeScannerMsBuildBegin"
            }
        },
        {
            "id": "4F733B42-528E-4EE3-BCBC-2744511425F7",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "Tasks/SonarQubeScannerMsBuildEnd"
            }
        },
        {
            "id": "EDC775DD-1A82-4ADD-A073-7B5813E87202",
            "description": "Service Endpoint type for SonarQube Connections",
            "type": "ms.vss-endpoint.service-endpoint-type",
            "targets": [
                "ms.vss-endpoint.endpoint-types"
            ],
            "properties": {
                "name": "sonarqube",
                "displayName": "SonarQube Server Connection",
                "url": {
                    "displayName": "Server Url",
                    "helpText": "Url for the SonarQube Server to connect to."
                },
                "dataSources": [
                    {
                        "name": "SonarQube Projects",
                        "endpointUrl": "{{endpoint.url}}api/projects/index",
                        "resultSelector": "jsonpath:$[*]"
                    }
                ],
                "authenticationSchemes": [
                    {
                        "type": "ms.vss-endpoint.endpoint-auth-scheme-basic",
                        "inputDescriptors": [
                            {
                                "id": "username",
                                "name": "Username",
                                "description": "Username",
                                "inputMode": "textbox",
                                "validation": {
                                    "isRequired": false,
                                    "dataType": "string"
                                }
                            },
                            {
                                "id": "password",
                                "name": "Password",
                                "description": "Password",
                                "inputMode": "passwordbox",
                                "isConfidential": true,
                                "validation": {
                                    "isRequired": false,
                                    "dataType": "string"
                                }
                            }
                        ]
                    },
                    {
                        "type": "ms.vss-endpoint.endpoint-auth-scheme-token"
                    }
                ],
                "helpMarkDown": "<a href=\"url-to-documentation\" target=\"_blank\"><b>Learn More</b></a>"
            }
        }
    ]
}